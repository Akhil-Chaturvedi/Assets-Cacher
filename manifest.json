{
  "manifest_version": 3,
  "name": "Assets Cacher",
  "version": "1.0",
  "description": "Caches frequently downloaded assets to save bandwidth, with per-site controls.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "webRequest",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}